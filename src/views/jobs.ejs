<div class="jobs-section">
  <div class="jobs-container row">
    <% jobs.forEach(job =>{ %>
    <div class="jobs-card">
      <div class="card-body">
        <span hidden><%= job.id %></span>
        <p class="active-hiring">Actively Hiring</p>
        <h4 class="card-title"><%= job.name %></h4>
        <p class="card-text category"><%= job.category %> <span class="tech"><%= job.tech %></span></p>
        <h6 class="card-location"><img src="../../images/map.png"><%= job.location %></h6>
        <p class="card-text"><img src="../../images/rupee.png"><%= job.salary %> LPA</p>
        <% job.skills?.forEach(skill=>{ %>
        <button type="button" class="btn btn-outline-primary btn-sm">
          <%= skill %>
        </button>
        <% }) %>
      </div>
      <div class="job-btn">
        <a href="/job/detail/<%= job.id %>" class="btn btn-primary">
          View Details
        </a>
      </div>
    </div>
    <% }) %>
  </div>
</div>